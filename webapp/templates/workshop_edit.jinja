<!DOCTYPE html>
<html>

<head>
    <title>{{"Edit" if data else "Add"}} Workshop</title>
</head>

<body>
    <h1>{{"Edit" if data else "Add"}} Workshop</h1>
    <form>
        <p>
            ID:<br>
            <input name="ID" type="text" value="{{ data[0] }}">
        </p>
        <p>
            State:<br>
            <input name="State" type="text" value="{{ data[1] }}">
        </p>
        <p>
            Title:<br>
            <input name="Title" type="text" value="{{ data[2] }}">
        </p>
        <p>
            Advertisement:<br>
            <input name="Advertisement" type="text" value="{{ data[3] }}">
        </p>
        <p>
            Description:<br>
            <input name="Description" type="text" value="{{ data[4] }}">
        </p>
        <p>
            Capacity:<br>
            <input name="Capacity" type="text" value="{{ data[5] }}">
        </p>
        <p>
            Computer Needs:<br>
            <input name="ComputerNeeds" type="text" value="{{ data[6] }}">
        </p>
        <p>
            Room Needs:<br>
            <input name="RoomNeeds" type="text" value="{{ data[7] }}">
        </p>
        <p>
            Max Repeat:<br>
            <input name="MaxRepeat" type="text" value="{{ data[8] }}">
        </p>
        <p>
            Parent Questions:<br>
            <input name="ParentQuestions" type="text" value="{{ data[9] }}">
        </p>
        <p>
            Other Information:<br>
            <input name="OtherInformation" type="text" value="{{ data[10] }}">
        </p>
        <p>
            Event Year:<br>
            <input name="Event_Year" type="text" value="{{ data[11] }}">
        </p>
        <p>
            Room Name:<br>
            <input name="Room_Name" type="text" value="{{ data[12] }}">
        </p>
        <p>
            <input name="action" type="submit" value="{{ 'Update' if data else 'Insert' }}">
            <input name="action" type="submit" value="Cancel">
        </p>
        <p>
            <input name="action" type="submit" value="Delete" style="color: red">
        </p>
    </form>
</body>

</html>
